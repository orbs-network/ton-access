{
  "name": "@orbs-network/ton-rpc-gw",
  "version": "1.0.0",
  "description": "Client side gateway to access Ton RPC protocols by IP randomly or round robin",
  "source": "lib/index.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build:web:reg": "esbuild ./lib/web.js --bundle  --sourcemap --target=es5 --outfile=./dist/index.js",
    "build:web:min": "esbuild ./lib/web.js --bundle  --minify    --target=es5 --outfile=./dist/index.min.js",
    "build:web": "rimraf ./dist && npm run build:web:reg && npm run build:web:min",
    "build": "npm run lint && rimraf ./lib && tsc && npm run build:web",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orbs-network/ton-rpc-gw.git"
  },
  "author": "yuval@orbs.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/orbs-network/ton-rpc-gw/issues"
  },
  "homepage": "https://github.com/orbs-network/ton-rpc-gw#readme",
  "dependencies": {
    "@types/isomorphic-fetch": "^0.0.36",
    "esbuild": "^0.15.5",
    "isomorphic-fetch": "^3.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.2"
  }
}
